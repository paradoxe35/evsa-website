{% layout 'layout.liquid' %}
{% block content %}
<!-- slider section -->
<section class="slider_section">
    <div id="carouselExampleIndicators" class="carousel slide vert" data-ride="carousel">
        <ol class="carousel-indicators">
            {%- for slider in sliders -%}
            <li data-target="#carouselExampleIndicators" data-slide-to={{ forloop.index0 }}"
                class="{% if forloop.index0 == 0 %}active{% endif %}"></li>
            {%- endfor -%}
        </ol>
        <div class="carousel-inner">
            {%- for slider in sliders -%}
            <div class="carousel-item {% if forloop.index0 == 0 %}{{ ' active' }}{% endif %}">
                <div class="slider_box" style="background-image: url('{{ slider.image }}');">
                    <div class="fixed_company-detail">
                        <p>
                            {{ slider.trail_title }}
                        </p>
                    </div>
                    <div class="slider-detail">
                        <div class="slider_detail-heading">
                            <h2>
                                {{ slider.lead_title }}
                            </h2>
                            <h1>
                                {{ slider.title }}
                            </h1>
                        </div>
                        <div class="slider_detail-text">
                            <p>
                                {{ slider.description }}
                            </p>
                        </div>
                        <div class="slider_detail-btn">
                            <a href="/about">
                                <span>
                                    Lire Plus
                                </span>
                                <img src="images/arrow.png" alt="" class="ml-2" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {%- endfor -%}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
<!-- end slider section -->

{% render 'sections/welcome.liquid', welcomeDetails: welcomeDetails %}

<!-- service section -->
{% render 'sections/service.liquid', services: services %}
<!-- end service section -->

<!-- security section -->
{% render 'sections/security.liquid' %}
<!-- end security section -->


<!-- story section -->
