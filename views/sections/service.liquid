<section class="service_section ">
    <div class="container">
        <div class="service_detail">
            <h3>
                {{ heading.service.h3 }}
            </h3>
            <h2>
                {{ heading.service.h2 }}
            </h2>
        </div>
        <div class="service_img-container">
            {%- for item in services -%}
            <div class="service_img-box i-box-{{ forloop.index0 | modulo4AddOne  }}"
                style="background-image: url('{{ item.image }}');">
                <a href="/service">{{ item.name }}</a>
            </div>
            {%- endfor -%}
        </div>
        <div class="service_btn">
            <a href="/service">
                <span>
                    Lire Plus
                </span>
                <img src="images/arrow-black.png" alt="" class="ml-2" />
            </a>
        </div>
    </div>
</section>